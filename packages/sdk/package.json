{
  "name": "@junctionrelay/payload-sdk",
  "version": "1.0.0",
  "description": "Plugin SDK for building JunctionRelay payload plugins",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "rpc-host": "./bin/rpc-host.mjs"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && node -e \"require('esbuild').buildSync({entryPoints:['bin/rpc-host.mjs'],bundle:true,platform:'node',format:'esm',outfile:'dist/rpc-host.mjs'})\"",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@junctionrelay/payload-protocol": "1.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/catapultcase/JunctionRelay_Protocols.git",
    "directory": "packages/sdk"
  }
}
